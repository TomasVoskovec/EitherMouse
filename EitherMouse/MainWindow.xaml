        xmlns:local="clr-namespace:EitherMouse"
        mc:Ignorable="d"
        Title="MainWindow" Height="400" Width="200" ResizeMode="CanMinimize">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="41*"/>
            <RowDefinition Height="330*"/>
        </Grid.RowDefinitions>
        <Label Margin="0,0,116,15.75">Select divice:</Label>
        <ComboBox x:Name="deviceSelection" Margin="76,0,0,15.75">

        </ComboBox>

        <Label Margin="0,10,150,295" Grid.Row="1">Name:</Label>
        <TextBox x:Name="deviceName" Margin="44,10,51,295" Grid.Row="1"/>
        <Button Margin="148,10,0,295" Grid.Row="1" Click="Button_Click">Add</Button>
    </Grid>
</Window>
